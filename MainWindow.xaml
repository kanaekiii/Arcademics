<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Arcademics.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcademics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid KeyDown="Grid_KeyDown">
            <Border x:Name="LoadStack" Margin="20,20,0,0" CornerRadius="9.5" MinWidth="820" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}"/>
        <TextBlock x:Name="AI" Margin="0,30,0,5" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Run Text="SWE4010 - Artificial Intelligence - Digital Assignment 2"/>
            <LineBreak/>
            <Run Text="Abinaya R - 21MIS1142"/>
            <LineBreak/>
            <Run Text="Dhanushkodi S - 21MIS1181"/>
            <LineBreak/>
        </TextBlock>
        <ProgressRing x:Name="GeneratingProgress" Padding="0,30,20,0" IsIndeterminate="True"/>
            <WebView2 x:Name="MyWebView2" Source="https://www.arcademics.com/games/grand-prix" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Grid>
    
</Window>
